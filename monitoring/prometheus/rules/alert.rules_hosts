ALERT host_down
  IF probe_success{job='host'} == 0
  FOR 5m
  LABELS { severity = "Info" }
  ANNOTATIONS {
      summary = "HOST DOWN",
      description = "Host {{ $labels.instance }} is down.",
  }

ALERT host_up
  IF probe_success{job='host'} == 1
  FOR 5m
  LABELS { severity = "Info" }
  ANNOTATIONS {
      summary = "HOST UP",
      description = "Host {{ $labels.instance }} is up.",
  }

